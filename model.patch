+    if not user_ready:
+        print("‚ùå Cannot proceed without user data")
+        sys.exit(1)
+    
+    # Run chat tests
+    success, results = test_chat_endpoint()
+    
+    # Exit with appropriate code
+    sys.exit(0 if success else 1)
+
+if __name__ == "__main__":
+    main()
